#!/bin/bash

# This has to be run from master
git checkout master

# Update our list of remotes
git fetch --all -p

echo "The following local branches track upstream branches that have been deleted, and will be removed:"
git branch -vv | grep ": gone]" | awk '{ print " * " $1 }'
read -p "Continue (y/n)? "
if [ "$REPLY" == "y" ]
then
  # Remove local branches whose upstream branches have been deleted
  git branch -vv | grep ": gone]" | awk '{ print $1 }' | xargs -n 1 git branch -D
  echo "Done!"
fi

